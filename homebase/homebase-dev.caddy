:8080 {
    root * {$ROOT_PATH}
    file_server
    reverse_proxy /TripsService/* localhost:2120
    reverse_proxy /LinksService/* localhost:4240
    reverse_proxy /api/v1/* https://prometheus.homelab {
      header_up Host {http.reverse_proxy.upstream.hostport}
    }
    reverse_proxy /download_app localhost:2120

    handle_errors {
      @404 {
        expression {http.error.status_code} == 404
      }
      rewrite @404 /index.html
      file_server
    }
}

:9090 {
  metrics /metrics
}
